{
  "name": "biplane/yandex-direct",
  "type": "library",
  "description": "PHP library for Yandex.Direct API",
  "keywords": ["yandex", "yandex.direct", "Яндекс.Директ", "sdk"],
  "authors": [
    {
      "name": "Denis",
      "role": "Developer"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/biplane/yandex-direct/graphs/contributors"
    }
  ],
  "license": "MIT",
  "require": {
    "php": "^7.2 || ^8.0",
    "ext-libxml": "*",
    "ext-soap": "*",
    "php-http/discovery": "^1.14",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "symfony/event-dispatcher": "^4.4 || ^5.0 || ^6.0",
    "symfony/options-resolver": "^4.0 || ^5.0 || ^6.0",
    "symfony/serializer": "^4.4 || ^5.0 || ^6.0"
  },
  "require-dev": {
    "allejo/php-vcr-sanitizer": "^1.0.9",
    "doctrine/coding-standard": "^9.0",
    "nyholm/psr7": "^1.4",
    "php-http/httplug": "^2.2",
    "php-vcr/php-vcr": "^1.4.5, <1.6",
    "phpunit/phpunit": "^7.5 || ^9.5",
    "psalm/plugin-phpunit": "^0.16.1",
    "psr/log": "^1.1",
    "symfony/http-client": "^4.4 || ^5.0",
    "vimeo/psalm": "~4.15.0"
  },
  "autoload": {
    "psr-4": { "Biplane\\YandexDirect\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": {
      "Biplane\\Tests\\YandexDirect\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "composer/package-versions-deprecated": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "5.x-dev"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@analyse",
      "@test"
    ],
    "analyse": "psalm",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always"
  }
}
