{
  "name": "biplane/yandex-direct",
  "type": "library",
  "description": "PHP library for Yandex.Direct API",
  "keywords": ["yandex", "yandex.direct", "Яндекс.Директ", "sdk"],
  "authors": [
    {
      "name": "Denis",
      "role": "Developer"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/biplane/yandex-direct/graphs/contributors"
    }
  ],
  "license": "MIT",
  "require": {
    "php": "^7.1",
    "ext-libxml": "*",
    "ext-soap": "*",
    "guzzlehttp/guzzle": "^6.3",
    "symfony/event-dispatcher": "~2.7|~3.0|~4.0",
    "symfony/options-resolver": "~2.7|~3.0|~4.0"
  },
  "require-dev": {
    "lstrojny/phpunit-function-mocker": "^1.0",
    "php-vcr/php-vcr": "^1.4",
    "phpstan/phpstan": "^0.12.82",
    "phpstan/phpstan-phpunit": "^0.12.18",
    "phpunit/phpunit": "^7.5",
    "psr/log": "^1.1",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "suggest": {
    "monolog/monolog": "For LoggerListener"
  },
  "autoload": {
    "psr-4": { "Biplane\\YandexDirect\\": "src/" },
    "files": ["src/Api/functions.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "Biplane\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "5.x-dev"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@analyse",
      "@test"
    ],
    "analyse": "phpstan analyse",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always"
  }
}
