<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="biplane_yandex_direct.api.factory" class="Biplane\YandexDirectBundle\Factory\ApiServiceFactory">
            <argument type="service" id="biplane_yandex_direct.client.factory" />
            <argument type="service" id="biplane_yandex_direct.profile.manager" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="biplane_yandex_direct.client.factory" class="Biplane\YandexDirectBundle\Factory\ClientFactory" public="false" />

        <service id="biplane_yandex_direct.profile.manager" class="Biplane\YandexDirectBundle\Profile\ProfileManager">
            <argument type="collection" />
        </service>

        <service id="biplane_yandex_direct.service.factory" class="Biplane\YandexDirectBundle\Service\Factory">
            <argument type="service" id="biplane_yandex_direct.api.factory" />
            <argument type="service" id="biplane_yandex_direct.profile.manager" />
        </service>

        <service id="biplane_yandex_direct.ipc.factory" class="Biplane\SystemV\Factory" public="false">
            <argument>%kernel.cache_dir%/ipc</argument>
            <argument>10000000</argument>
        </service>

        <service id="biplane_yandex_direct.event_subscriber.total_limits" class="Biplane\YandexDirectBundle\EventListener\TotalLimitListener">
            <argument type="service" id="biplane_yandex_direct.ipc.factory" />
            <argument />

            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>